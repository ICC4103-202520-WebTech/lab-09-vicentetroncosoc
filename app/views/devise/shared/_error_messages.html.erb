<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <p class="mb-2"><strong><%= pluralize(resource.errors.count, "error") %></strong> prevented this action:</p>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
